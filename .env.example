# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# The .env file is git-ignored to protect sensitive credentials

# Browser Configuration (required)
# Options: chrome, ch, headlesschrome, firefox, ff, headlessfirefox
BROWSER=chrome

# Test Results Directory (required)
RESULTS_DIR=./results

# Database Credentials (required for database tests)
DB_USER=root
DB_PASSWORD=root
# Database Connection (optional - overrides ENV defaults if set)
# If not set, defaults based on ENV: test=127.0.0.1:8889, prod=demostore.supersqa.com:3306
# DB_HOST=127.0.0.1
# DB_PORT=8889
# Database Name (optional - defaults to GenericConfigs.DATABASE_SCHEMA if not set)
# DB_NAME=localdemostore

# API Credentials (required for API tests)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Environment (optional, defaults to 'test')
# Options: test, prod
ENV=test
