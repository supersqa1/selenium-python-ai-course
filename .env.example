# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# The .env file is git-ignored to protect sensitive credentials

# Browser Configuration (required)
# Options: chrome, ch, headlesschrome, firefox, ff, headlessfirefox
BROWSER=chrome

# Test Results Directory (required)
RESULTS_DIR=./results

# Database Credentials (required for database tests)
DB_USER=root
DB_PASSWORD=root

# API Credentials (required for API tests)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Environment (optional, defaults to 'test')
# Options: test, prod
ENV=test
